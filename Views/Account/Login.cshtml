@model GameManager.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="login-form">
    <img class="login-form__image" src="pictures/firewatch.png" alt="" width="330">
    <div class="login-form__content">
        <h2 class="title">Game manager</h2>
        <p>Введите данные для входа:</p>
        <form name="login" method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div class="input-grid" asp-validation-summary="None">
                <div class="input-box">
                    <input class="wrong-input" asp-for="UserName" type="text" placeholder="Имя пользователя">
                    <span class="icon"></span>
                    <span class="error-label">
                        <span class="icon"></span>
                        <span class="text" asp-validation-for="UserName"></span>
                    </span>
                </div>
                <div class="input-box">
                    <input asp-for="Password" type="password" placeholder="Пароль">
                    <span class="error-label">
                        <span class="icon"></span>
                        <span class="text" asp-validation-for="Password"></span>
                    </span>
                </div>
                <label class="checkbox">
                    <input type="checkbox" asp-for="RememberMe" />
                    <svg viewBox="0 0 21 18">
                        <symbol id="tick-path" viewBox="0 0 21 18" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5.22003 7.26C5.72003 7.76 7.57 9.7 8.67 11.45C12.2 6.05 15.65 3.5 19.19 1.69" fill="none" stroke-width="2.25" stroke-linecap="round" stroke-linejoin="round" />
                        </symbol>
                        <defs>
                            <mask id="tick">
                                <use class="tick mask" href="#tick-path" />
                            </mask>
                        </defs>
                        <use class="tick" href="#tick-path" stroke="currentColor" />
                        <path fill="white" mask="url(#tick)" d="M18 9C18 10.4464 17.9036 11.8929 17.7589 13.1464C17.5179 15.6054 15.6054 17.5179 13.1625 17.7589C11.8929 17.9036 10.4464 18 9 18C7.55357 18 6.10714 17.9036 4.85357 17.7589C2.39464 17.5179 0.498214 15.6054 0.241071 13.1464C0.0964286 11.8929 0 10.4464 0 9C0 7.55357 0.0964286 6.10714 0.241071 4.8375C0.498214 2.39464 2.39464 0.482143 4.85357 0.241071C6.10714 0.0964286 7.55357 0 9 0C10.4464 0 11.8929 0.0964286 13.1625 0.241071C15.6054 0.482143 17.5179 2.39464 17.7589 4.8375C17.9036 6.10714 18 7.55357 18 9Z" />
                    </svg>
                    <svg class="lines" viewBox="0 0 11 11">
                        <path d="M5.88086 5.89441L9.53504 4.26746" />
                        <path d="M5.5274 8.78838L9.45391 9.55161" />
                        <path d="M3.49371 4.22065L5.55387 0.79198" />
                    </svg>
                    <span class="text">Запомнить пароль</span>
                </label>
            </div>
            <div class="buttons">
                <button type="submit" class="accent">Войти</button>
                <a class="button" asp-controller="Account" asp-action="Register">Регистрация</a>
            </div>
        </form>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="dialog-wrapper">
            <div class="dialog-box">
                <h3 class="dialog-box__title fault">Не удается войти</h3>
                <p class="dialog-box__message">@Model.ErrorMessage</p>
                <button class="dialog-box__button accent">Закрыть</button>
            </div>
        </div>
    }
</div>